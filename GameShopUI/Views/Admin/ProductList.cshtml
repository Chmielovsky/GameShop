@model IEnumerable<Game>
@{
    ViewData["Title"] = "Product List";
    Layout = "_Layout";
}
<h1>Producy List</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Image</th>
      <th scope="col">Name</th>
      <th scope="col">Genre</th>
      <th scope="col">Price</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
     
    </tr>
  </thead>
  <tbody>
        @foreach (var game in Model)
        {
        <tr>
              <th scope="row">@game.Id</th>
          <td> <img src="@game.Image" style="height:100px"/> </td>
          <td> @game.GameName</td>
          <td> @game.GenreName</td>
          <td> @game.Price</td>
          <td> <a href="edit-product/@game.Id" class="btn btn-secondary">Edit</a></td>
              <td> <a href="delete-product/@game.Id" class="btn btn-danger">Delete</a></td>
        </tr>        
        }
  </tbody>
</table>

